<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="maffre.com.outerspacemanager.outerspacemanager.activities.MenuActivity">


    <TextView
        android:text="minerals :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mineraux"
        android:layout_below="@+id/gaz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="gaz :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gaz"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="points : "
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/buildings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:clickable="false"
        android:fontFamily="cursive"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Batiments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buildings"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mineraux"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Flotte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/fleet"
        android:layout_below="@+id/buildings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Recherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/research"
        android:layout_below="@+id/fleet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chantier spatial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chantierSpatial"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/research"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Galaxie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galaxie"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/chantierSpatial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DÃ©connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deconnect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
